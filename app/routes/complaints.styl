.complaints-container__date-range-inputs {
  margin-bottom: 20px;
  color: white;

  input {
    height: 15px;
    margin: 0 10px;
    padding: 5px;
    border-radius: 3px;
    border: 1px solid #ccc;
    font-size: 20px;
  }
}

.complaints-container__complaint-type-selector {
  height: 30px;
  color: white;

  select {
    height: 100%
    padding: 0;
    margin: 0 20px;
    border: 1px solid #ccc;
    border-radius: 3px;
    overflow: hidden;
    background: #fff
  }

  button {
    height: 100%;
    border-radius: 3px;
    background: white;
  }

  .loading-icon {
    height: 10px
  }
}